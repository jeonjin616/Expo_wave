<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MD">

	<select id ="PostsAll" resultType="mdPostDTO">
		select * from md_posts
	</select>
	
	<insert id ="PostsMake" parameterType="mdPostDTO">
		insert into md_posts (MD_title, MD_content,MD_create,MD_post_Thumbnail) values (#{MD_title},#{MD_content},now(),#{MD_post_Thumbnail})
	</insert>

	<select id="GetPostsById" resultType="mdPostDTO" parameterType="int">
		select * from md_posts
		where MD_id = #{MD_id}
	</select>
	
	<update id="PostUpdate" parameterType="mdPostDTO">
		update md_posts
		set MD_title = #{MD_title},
			MD_content = #{MD_content},
			MD_modifi = now()
		where MD_id = #{MD_id}
	</update>
	
	<!-- #{MD_id} -> 파라미터 타입  -->
	<delete id ="PostDelete" parameterType="mdPostDTO" >
		delete from md_posts
		where MD_id = #{MD_id}
	</delete>

</mapper>
